    <Style x:Key="ExitApp"
       TargetType="{x:Type Button}">

        <Setter Property="Height"
            Value="40" />
        <Setter Property="Width"
            Value="40" />
        <Setter Property="HorizontalAlignment"
            Value="Right" />
        <Setter Property="VerticalAlignment"
            Value="Top" />
        <Setter Property="Margin"
            Value="0,15,15,0" />

        <Setter Property="Template">

            <Setter.Value>

                <ControlTemplate TargetType="{x:Type Button}">

                    <Border x:Name="border"
                        BorderThickness="0"
                        Background="{StaticResource close_app_def}">

                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver"
                             Value="True">

                            <Setter Property="Background"
                                TargetName="border"
                                Value="{StaticResource close_app_mo}" />

                        </Trigger>

                        <Trigger Property="IsPressed"
                             Value="True">

                            <Setter Property="Background"
                                TargetName="border"
                                Value="{StaticResource close_app_mo}" />

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>

        </Setter>

    </Style>

    <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
        <Setter Property="Width" Value="52"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!-- Nền -->
                        <Border x:Name="BackgroundBorder" Width="52" Height="25"
                            Background="Gray" CornerRadius="15"/>
                        <!-- Nút tròn -->
                        <Ellipse x:Name="SwitchKnob" Width="20" Height="20" Fill="White"
                             HorizontalAlignment="Left" Margin="3,0,0,0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Khi ToggleButton được bật -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="BackgroundBorder" Property="Background" Value="Green"/>
                            <Setter TargetName="SwitchKnob" Property="Margin" Value="29,0,0,0"/>
                        </Trigger>
                        <!-- Khi ToggleButton tắt -->
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="SwitchKnob" Property="Margin" Value="3,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
