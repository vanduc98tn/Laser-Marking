<UserControl x:Class="Development.RectangleLamp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Development"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="rec"
                Fill="{Binding Fill, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Stroke="#333333"
                StrokeThickness="2">
        </Rectangle>
        <TextBlock 
                x:Name="txt"
                Text="{Binding TextOFF, RelativeSource={RelativeSource AncestorType=UserControl}}"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
        </TextBlock>
    </Grid>
</UserControl>
