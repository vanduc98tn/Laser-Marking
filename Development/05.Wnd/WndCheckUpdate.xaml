<Window x:Class="Development.WndCheckUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent"
        Title="WndCheckUpdate" Height="300" Width="800"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Border Background="#EEEEEE" CornerRadius="5" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="1"/>
        </Border.Effect>

        <Grid MouseDown="Grid_MouseDown" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="Waiting Check Update" FontSize="14" Foreground="Gray" FontWeight="SemiBold"/>
                    <Label Name="lblMessage" Padding="0" VerticalContentAlignment="Center" 
                           FontFamily="Segoe UI" FontWeight="Bold" Foreground="#333333" FontSize="26">
                        SOFTWARE UPDATE
                    </Label>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                    <TextBlock Text="Đang xử lý: " FontSize="14" Foreground="#666666"/>
                    <TextBlock Name="progressText" Text="{Binding Progress, StringFormat={}{0}%}" 
                               FontSize="14" FontWeight="Bold" Foreground="#2196F3"/>
                </StackPanel>

                <ProgressBar Grid.Row="1" Name="progressBar" Height="20" 
                             Minimum="0" Maximum="100" Value="{Binding Progress}" 
                             Foreground="#0000FF" Background="#E0E0E0" BorderThickness="0">
                    <ProgressBar.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </ProgressBar.Resources>
                </ProgressBar>
            </Grid>

            <Grid Grid.Row="2" Margin="10,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <Button x:Name="btnYes" Width="190" Height="55" Background="#2D2D2D" BorderThickness="0" Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <Canvas Width="20" Height="20" Margin="0,0,10,0">
                                <Polyline Points="2,10 8,18 18,2" Stroke="#4A90E2" StrokeThickness="3" StrokeLineJoin="Round"/>
                            </Canvas>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Update Software" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Download Now" FontSize="11" Foreground="LightGray"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnNo" Width="190" Height="55" Background="#2D2D2D" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <Canvas Width="20" Height="20" Margin="0,0,10,0">
                                <Line X1="2" Y1="2" X2="18" Y2="18" Stroke="Red" StrokeThickness="3"/>
                                <Line X1="2" Y1="18" X2="18" Y2="2" Stroke="Red" StrokeThickness="3"/>
                            </Canvas>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Cancel Update" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Close" FontSize="11" Foreground="LightGray"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Label Name="lbUpdate" VerticalContentAlignment="Center" 
                           FontFamily="Segoe UI" FontWeight="Normal" FontStyle="Italic"
                           Foreground="#666666" FontSize="14" Margin="15,0">
                        Check Connect Server....
                    </Label>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>