<Window x:Class="Development.WndLotin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Height="350" Width="550">

    <Border Background="White" CornerRadius="10" BorderBrush="#6787c0" BorderThickness="2" Margin="5">
        <Grid MouseDown="Grid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#333333" CornerRadius="8,8,0,0">
                <Grid Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOT IN DATA" VerticalAlignment="Center" Foreground="White" FontSize="22" FontWeight="Bold"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="On Keyboard" Foreground="White" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ToggleButton x:Name="btSwitchOnKeyBoard"   Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="WORK GROUP" VerticalContentAlignment="Center" FontWeight="Bold" Background="#F0F0F0" Margin="1"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtWorkGroup" Margin="1" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>

                <Label Grid.Row="1" Content="DEVICE ID" VerticalContentAlignment="Center" FontWeight="Bold" Background="#F0F0F0" Margin="1"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDeviceId" Margin="1" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>

                <Label Grid.Row="2" Content="LOT ID" VerticalContentAlignment="Center" FontWeight="Bold" Background="#F0F0F0" Margin="1"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtLotId" Margin="1" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
                    <Label Grid.Column="1" Content="UnLimit" Background="#DCDCDC" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1" FontSize="12" FontWeight="Bold"/>
                </Grid>

                <Label Grid.Row="3" Content="LOT QTY" VerticalContentAlignment="Center" FontWeight="Bold" Background="#F0F0F0" Margin="1"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLotQty" Margin="1" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
            </Grid>

            <Grid Grid.Row="2" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnOK" Content="OK" Margin="5" Background="#6787c0" Foreground="White" FontSize="18" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="btnCancel" Grid.Column="1" Content="CANCEL" Margin="5" Background="#6787c0" Foreground="White" FontSize="18" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>