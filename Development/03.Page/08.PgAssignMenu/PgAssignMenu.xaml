<Page x:Class="Development.PgAssignMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
     d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgAssignMenu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Foreground="#879ec8" Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Foreground="#879ec8" Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Foreground="#879ec8" Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >
                        <Button x:Name="btSetting1" Background="#333333" Height="60" Width="215"  Margin="0 5 5 5" >

                            <TextBlock Text="Setting App" Foreground="White" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        </Button>


                        <Button x:Name="btSetting2"  Height="60" Width="215" >

                            <TextBlock  Text="Setting Alarm"  Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        </Button>




                        <!--<Button x:Name="btSetting3"  Height="60" Width="215" >
                         <StackPanel Orientation="Horizontal">
                             -->
                        <!-- Add an Image control here with the source attribute pointing to your image file -->
                        <!--

                             <TextBlock Padding="10" Text="Setting 3"  Margin="10" VerticalAlignment="Center"/>
                         </StackPanel>
                     </Button>
                     <Button x:Name="btSetting4"  Height="60" Width="215" >
                         <StackPanel Orientation="Horizontal">
                             -->
                        <!-- Add an Image control here with the source attribute pointing to your image file -->
                        <!--

                             <TextBlock Padding="10" Text="Setting 4"  Margin="10" VerticalAlignment="Center"/>
                         </StackPanel>
                     </Button>-->

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="2 0 30 0" />
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="AliceBlue" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="300"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="190"></RowDefinition>
                <RowDefinition Height="140"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="1"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Assign Menu
                </Label>

            </Grid>
            <Grid  Grid.Row="1">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="1">
                    <Border CornerRadius=" 10 ">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#333333" Offset="1"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label  FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0,0,0,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> Setting FTP Update Software
                    </Label>

                </Grid>

                <Grid Grid.Row="1" Margin=" 0 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="FTPServerUrl" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="User Login" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="User Name" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="PassWord" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Name App Open" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>




                    <Grid Grid.Row="0" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxUrlFTP"  Grid.Row="0" Text="URL"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">

                                <ToggleButton x:Name="btSwitchLogin"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                                <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Auto Check Update" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchAutoCheckUpdate"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>

                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxUseNameFTP"  Grid.Row="0" Text="UseNameFTP"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >

                            <TextBox x:Name="tbxPassWordFTP"  Grid.Row="0" Text="PassWordFTP"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >

                            <TextBox x:Name="tbxNameAppFTP"  Grid.Row="0" Text="NameAppFTP"></TextBox>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                    <Border CornerRadius=" 10 ">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#333333" Offset="1"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label  FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0,0,0,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> Setting Machine Name
                    </Label>

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Name Machine" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="4" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >

                            <TextBox x:Name="tbxNameMachine"  Grid.Row="0" Text="Name Machine"></TextBox>
                        </Border>
                    </Grid>
                </Grid>


            </Grid>
            <Grid Grid.Row="3">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                    <Border CornerRadius=" 10 ">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#333333" Offset="1"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label  FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0,0,0,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> Setting User Login Mes
                    </Label>

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Login Mes" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Label Mes OP" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Label Mes ME" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>




                    <Grid Grid.Row="0" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchLoginApp"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                                <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Login App" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchLoginAppInital"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>

                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxMESOP"  Grid.Row="0" Text="Label OP"></TextBox>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxMESME"  Grid.Row="0" Text="Label ME"></TextBox>
                        </Border>
                    </Grid>
                </Grid>


            </Grid>


            <!--row 4-->
            <Grid Grid.Row="4">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                    <Border CornerRadius=" 10 ">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#333333" Offset="1"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label  FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0,0,0,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> Setting User Login Mes
                    </Label>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="300"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Lock Setting PLC" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>







                    <Grid Grid.Row="0" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchLockPLC"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>


                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="AliceBlue" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <Label  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Content="Selec Language" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></Label>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">


                        <Border CornerRadius="8" Width="226" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <ComboBox x:Name="cbLanguage"
                                 Margin="3"
                                 Width="220"
                                 Height="40"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Padding="8,4"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 SelectionChanged="cbLanguage_SelectionChanged"
                                 Background="#FFF"  
                                 BorderThickness="0">
                                <ComboBoxItem Tag="en">🇺🇸 English - English</ComboBoxItem>
                                <ComboBoxItem Tag="vi">🇻🇳 Tiếng Việt - VietNam</ComboBoxItem>
                                <ComboBoxItem Tag="ja">🇯🇵 日本語 - Japan</ComboBoxItem>
                                <ComboBoxItem Tag="ko">🇰🇷 한국어 - Korean</ComboBoxItem>
                                <ComboBoxItem Tag="zh">🇨🇳 中文 - China</ComboBoxItem>

                            </ComboBox>
                        </Border>



                    </Grid>


                </Grid>


            </Grid>


        </Grid>


    </Grid>
</Page>
