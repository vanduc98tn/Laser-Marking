<Page x:Class="Development.PgAssignAlarmSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
     d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgAssignAlarmSetting">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>


                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Foreground="#6787c0" Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Foreground="#6787c0" Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Foreground="#6787c0" Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Margin="0 100 0 0" >
                        <Button x:Name="btSetting1"  Height="60" Width="215" >

                            <TextBlock Text="Setting App"  Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        </Button>
                        <Button x:Name="btSetting2" Background="#333333" Height="60" Width="215"  Margin="0 5 5 5" >

                            <TextBlock Text="Setting Alarm" Foreground="White" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        </Button>


                       

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0" Margin="4">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>

                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>

                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="1"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label Grid.Column="0" FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Setting Alarm
                </Label>

            </Grid>
            <Grid Grid.Row="1">

                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="10,0,5,0"/>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>

                    <Style TargetType="TextBox">
                        <Setter Property="Margin" Value="10,2,100,2"/>
                    </Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Margin" Value="10,2,100,2"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#6787c0">
                    <Grid.Resources>

                        <Style TargetType="Button">
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="FontWeight" Value="Bold" />

                            <Setter Property="Background" Value="#FF6A6A" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>

                    </Grid.Resources>
                    <Label FontSize="16" Background="CadetBlue" FontWeight="Bold" 
Padding="0,0,0,0" Margin="0,0,0,0"
VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White">Error Message</Label>

                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="0"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>

                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Margin" Value="0,5,5,5" />
                            <Setter Property="Background" Value="#FF6A6A" />
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>

                    </Grid.Resources>

                    <Grid Grid.Column="1" Background="Black"></Grid>
                    <Grid Grid.Column="2" Margin="2 0 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.2*"></RowDefinition>
                            <RowDefinition Height="4*"></RowDefinition>
                            <RowDefinition Height="6*"></RowDefinition>
                            <RowDefinition Height="0.9*"></RowDefinition>

                        </Grid.RowDefinitions>



                        <Grid Grid.Row="0">
                            <Grid.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="Background" Value="RoyalBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="2,2,2,2"/>
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                    <Setter Property="Foreground" Value="RoyalBlue"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>

                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.Column="0" Background="White" Margin="1" >
                                <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#879ec8">
                                    <Label HorizontalContentAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" Time  " ></Label>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="0" Background="White" Margin="1" >
                                <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#879ec8">
                                    <Label HorizontalContentAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" Code  " ></Label>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="0" Background="White" Margin="1" >
                                <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#879ec8">
                                    <Label HorizontalContentAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" SEQID  " ></Label>
                                </Border>
                            </Grid>

                            <Grid  Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" BorderThickness="0" x:Name="txtCode">12345</TextBox>
                                <Grid Grid.Column="1" Background="White" Margin="1" >
                                    <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#879ec8">
                                        <Label HorizontalContentAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" SEQID  " ></Label>
                                    </Border>
                                </Grid>
                                <TextBox Grid.Column="2" BorderThickness="0" x:Name="txtSeqId">11</TextBox>

                                <Grid Grid.Column="3" Background="White" Margin="1" >
                                    <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#879ec8">
                                        <Label HorizontalContentAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" Mode  " ></Label>
                                    </Border>
                                </Grid>
                                <TextBox Grid.Column="4" BorderThickness="0" x:Name="txtMode">AUTO</TextBox>

                            </Grid>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtTime"
                                    Background="Black" Foreground="White">Time</TextBox>


                            <Grid Grid.Row="2" Grid.Column="1">

                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="Background" Value="RoyalBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="2,2,2,2"/>
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Top"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </Grid.Resources>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" ></RowDefinition>
                                <RowDefinition Height="3" ></RowDefinition>
                                <RowDefinition Height="5*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="White" >
                                <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#696969" />
                                <StackPanel Orientation="Vertical">
                                    <Border Margin="15,0,0,0" Background="#333333" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                        <Label HorizontalContentAlignment="Left" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" Event Message  " FontSize="15"></Label>
                                    </Border>
                                    <TextBox Margin="5" Height="220" x:Name="txtMessage" Foreground="Yellow" VerticalContentAlignment="Top">message</TextBox>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="2" Background="White" >
                                <Border Margin="0 0 1 0" CornerRadius=" 10 10 10 10 " Background="#696969" />
                                <StackPanel Orientation="Vertical">
                                    <Border Margin="15,0,0,0" Background="#333333" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                                        <Label HorizontalContentAlignment="Left" Background="Transparent" VerticalContentAlignment="Center" Foreground="White" Content=" Solution  " FontSize="15"></Label>
                                    </Border>
                                    <TextBox Margin="5" Height="220" x:Name="txtSolution">solution</TextBox>
                                </StackPanel>
                            </Grid>

                        </Grid>
                        <Grid Grid.Row="2">
                            <Viewbox Stretch="Uniform">
                                <Grid>
                                    <Image Name="SavedImage" />
                                    <Canvas Name="DrawingCanvas"
                                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                                    MouseMove="Canvas_MouseMove"
                                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                                    Background="Transparent">
                                        <!-- Các phần tử khác của Canvas -->
                                    </Canvas>
                                </Grid>
                            </Viewbox>

                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="17" />
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="Foreground" Value="#6787c0"/>

                                </Style>
                                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                    <Setter Property="FontSize" Value="17" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Margin" Value="0,5,5,5" />
                                    <Setter Property="Background" Value="#333333" />
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>

                            </Grid.Resources>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Name="DropZone"
                                AllowDrop="True"     
                                MouseLeftButtonDown="DropZone_MouseLeftButtonDown"
                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                Width="150" Height="50"
                                Text="Drag Image Here"
                                Background="LightGray"
                                TextAlignment="Center"
                                Padding="10 15 15 0">
                                </TextBlock>


                                <Button x:Name="btPrevious" Padding="5" Width="100" FontSize="20" Margin="10,5,5,5">Previous</Button>
                                <TextBox x:Name="tbxNumber" Padding="5" Width="140" FontSize="25" Margin="10,0,5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">00</TextBox>
                                <Button x:Name="btNext" Padding="5" Width="100" Margin="10,5,5,5">Next</Button>

                                <Button x:Name="btSave" Padding="5" Width="130" Margin="10,5,5,5">Save</Button>
                                <Button x:Name="btClearCanvas" Padding="5" Width="130" Margin="10,5,5,5">Clear Canvas</Button>
                            </StackPanel>

                        </Grid>

                    </Grid>
                </Grid>



            </Grid>
        </Grid>


    </Grid>
</Page>
