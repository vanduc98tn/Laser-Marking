<Page x:Class="Development.PgMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      xmlns:Language="clr-namespace:Development.Properties"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMenu">

    <Grid Background="White" Margin="0,0,0,0">



        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="500*"></RowDefinition>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#879ec0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="1" Background="#879ec0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="White"/>

                </Style>

            </Grid.Resources>
            <Grid Grid.Column="0">
                <Grid.Resources>


                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="White" />
                        <Setter Property="BorderThickness" Value="0"/>

                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="22" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Foreground" Value="Black"/>

                    </Style>

                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                    <Label x:Name="txtMenu" FontWeight="Bold" Foreground="White" FontSize="50"  Margin="0,0,10,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> Main Menu
                    </Label>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btUpdate" Width="230" Height="60" Grid.Column="0" Margin="12 0 5 0">
                        <StackPanel Orientation="Horizontal">
                            <!-- Add an Image control here with the source attribute pointing to your image file -->
                            <Image Source="/01.Image/updated.png" Margin="10" />
                            <TextBlock Foreground="Black" Text="Check Update" FontSize="15"  Margin="10"/>
                        </StackPanel>
                    </Button>
                    
                </Grid>

            </Grid>
            <Grid Grid.Column="1">
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#6790b0" />

                    </Style>
                </Grid.Resources>
                <Border Background="White" Padding="15" Margin="0 0 50 10" CornerRadius="15">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Border Width="70" Height="70" Margin="15 0 15 0" CornerRadius="30" >

                                <Image x:Name="myImage" Stretch="Fill" Source="/01.Image/avatar.png"/>

                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <Label  x:Name="lblMode" HorizontalAlignment="Left" Content="Log in" FontSize="32" Foreground="#8F8F8F"/>
                                <Label x:Name ="lblCurrentTime" Content="Log in - Time" FontSize="20" Foreground="#9C9C9C"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 20 0">
                            
                            <Button Width="140" Height="52" x:Name="btLogin" Foreground="White" BorderThickness="0" Padding="10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                    <!-- Tạo dấu V -->
                                    <Canvas Width="20" Height="20" Margin="0,0,10,0">
                                        <Polyline Points="2,10 8,18 18,2" Stroke="White" StrokeThickness="3" StrokeLineJoin="Round"/>
                                    </Canvas>
                                    <!-- Nội dung chính -->
                                    <StackPanel>
                                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Login}" FontSize="14" FontWeight="Bold"/>
                                        
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                            <Button Width="140" Height="52" x:Name="btLogout" Foreground="White" BorderThickness="0" Padding="10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                    <!-- Tạo dấu X -->
                                    <Canvas Width="20" Height="20" Margin="0,0,10,0">
                                        <Line X1="2" Y1="2" X2="18" Y2="18" Stroke="Red" StrokeThickness="3"/>
                                        <Line X1="2" Y1="18" X2="18" Y2="2" Stroke="Red" StrokeThickness="3"/>
                                    </Canvas>
                                    <!-- Nội dung chính -->
                                    <StackPanel>
                                        <TextBlock Text="{x:Static Language:Resources.PG_MN_LogOut}" FontSize="14" FontWeight="Bold"/>
                                        
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>



        </Grid>
        <Grid Grid.Row="2">

            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#879ec0" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="3">
            <Border CornerRadius=" 10 " Background="#EEEEEE">
                <!--<Border.Background>
                  <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                      <GradientStop Color="#879ec0" Offset="0"/>
                      <GradientStop Color="White" Offset="1"/>
                  </LinearGradientBrush>
              </Border.Background>-->
                <Grid>
                    <Canvas>
                        <TextBlock Text="Design by Hiiep" Foreground="#00868B" Canvas.Right="10" Canvas.Bottom="10"/>
                        <!--<Polygon Points="0,20,230,140,0,270" Fill="#879ec8" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                      <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                      <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                      <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>-->
                    </Canvas>

                    <!--<StackPanel VerticalAlignment="Top">
                      <TextBlock Text="ITM" Style="{StaticResource titleText}" FontSize="50" Canvas.Bottom="10"/>
                      <TextBlock Text="Semiconductor" Style="{StaticResource normalText}"  Canvas.Bottom="10" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                      <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}"  Canvas.Bottom="10" Opacity="0.8" Margin=" 20 0"/>
 

                  </StackPanel>-->
                </Grid>
            </Border>


            <UniformGrid Columns="0" Rows="4" Margin="100,0,100,0" Height="480">
                <UniformGrid.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource sButton}">
                        <Setter Property="Foreground" Value="#dd222222" />
                        <Setter Property="Background" Value="#dddddd" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FontSize" Value="30" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="14" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#6790b0"/>
                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="25" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Foreground" Value="White"/>

                    </Style>
                </UniformGrid.Resources>

                <Button x:Name="btTeaching" >
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/menu-grid.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock VerticalAlignment="Center" Text="{x:Static Language:Resources.PG_MN_TeachingMenu}" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btMechanical">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/menu-mechanic.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Mechanical_Menu}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btSystem">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/menu-system.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_System_Menu}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btManual">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/menu-manual.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Manual_Operation}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btStatus">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/Status.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Status_Menu}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btModel">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/menu-save.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Menu_Model}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btSuperUser">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/menu-admin.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Super_User_Menu}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btAssignMenu">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                    </Button.Effect>

                    <StackPanel Orientation="Horizontal">
                        <Image Margin="40,0,0,0" Source="/01.Image/team.png">
                            <Image.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="{x:Static Language:Resources.PG_MN_Super_User_Menu}" VerticalAlignment="Center" Padding="20,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                            </TextBlock.Effect></TextBlock>
                    </StackPanel>
                </Button>

            </UniformGrid>

        </Grid>

    </Grid>
</Page>
