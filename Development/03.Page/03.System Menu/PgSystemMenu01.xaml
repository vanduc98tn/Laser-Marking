<Page x:Class="Development.PgSystemMenu01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgSystemMenu01">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Foreground="#879ec8" Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Foreground="#879ec8" Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Foreground="#879ec8" Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >
                        <Button x:Name="btSetting1" Background="#333333" Height="60" Width="215"  Margin="0 5 5 5" >

                            <TextBlock Text="System 01" Foreground="White" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        </Button>


                        <Button x:Name="btSetting2"  Height="60" Width="215" >

                            <TextBlock  Text="System 02"  Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                        </Button>






                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="1"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> SYSTEM MENU
                </Label>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Border CornerRadius=" 10 " Margin="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#879ec0" Offset="1"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label FontWeight="Bold" Foreground="White" FontSize="20"  Margin="0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> System Machine
                    </Label>
                </Grid>



                <Grid Grid.Row="1" Margin="10,0,10,0">

                    <Grid.Resources>
                        <Style TargetType="GroupBox">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="Margin" Value="2,2,2,2"/>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ssButton}">
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Margin" Value="9,9,9,9"/>
                            <Setter Property="Background" Value="White"/>
                        </Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Margin" Value="5,5,5,5"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Foreground" Value="black"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TextBlock2">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                        </Style>
                        <Style TargetType="Rectangle" x:Key="Rect2">
                            <Setter Property="Width" Value="25"/>
                            <Setter Property="Height" Value="18"/>
                            <Setter Property="Fill" Value="White"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="Stroke" Value="Silver"/>
                        </Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="10"/>
                            <Setter Property="Fill" Value="White"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="Stroke" Value="Gray"/>
                        </Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Margin" Value="4,2,4,2"/>
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <!--<ColumnDefinition Width="*"/>-->
                    </Grid.ColumnDefinitions>


                    <UniformGrid Grid.Column="0" Columns="1" Rows="7">
                        <GroupBox Header="[DRYRUN MODE]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="500"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10500"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Dryrun Mode"
                                            TextON="Dryrun Mode"
                                            Content="Dryrun Mode"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="[STEP RUN ON]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="501"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10501"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Step Run"
                                            TextON="Step Run"
                                            Content="Step run"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="[DISABLE BUZZER]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="502"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10502"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Disable Buzzer"
                                            TextON="Disable Buzzer"
                                            Content="Disable Buzzer"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="[DISABLE KACON SOUND]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="503"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10503"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Disable Kacon Sound"
                                            TextON="Disable Kacon Sound"
                                            Content="Disable Kacon Sound"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="[DISABLE DOOR SENSORS]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="504"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10504"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Disable Door Sensors"
                                            TextON="Disable Door Sensors"
                                            Content="Disable Door Sensors"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="[DISABLE SAFETY SENSORS]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="505"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10505"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Disable Safery Sensors"
                                            TextON="Disable Safery Sensors"
                                            Content="Disable Safery Sensors"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>
                        
                        
                       



                    </UniformGrid>

                    <UniformGrid Grid.Column="1" Columns="1" Rows="7">

                        <GroupBox Header="[DISABLE VISION]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="505"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10505"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Disable Safery Sensors"
                                            TextON="Disable Safery Sensors"
                                            Content="Disable Safery Sensors"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[DISABLE VISION]">
                            <Grid>
                                <local:PLCButton
                                            Grid.Column="0"
                                            Margin="1"
                                            Action="Momentary"
                                            IsTabItem="False"
                                            DeviceWrite="L" AddressWrite="505"
                                            UseLampCodition="True"
                                            DeviceLamp="L" AddressLamp="10505"
                                            BackgroundLampOFF="Transparent"
                                            BackgroundLampON="GreenYellow"
                                            TextOFF="Disable Safery Sensors"
                                            TextON="Disable Safery Sensors"
                                            Content="Disable Safery Sensors"
                                            Background="Transparent"
                                            Foreground="Black"
                                            FontSize="20"
                                           
>
                                </local:PLCButton>
                            </Grid>
                        </GroupBox>

                    </UniformGrid>

                    <UniformGrid Grid.Column="2" Columns="1" Rows="7">

                        

                    </UniformGrid>

                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
